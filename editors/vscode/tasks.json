{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Shell Script with shfmt",
      "type": "shell",
      "command": "shfmt",
      "args": [
        "-w",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}

{
  //================================================================================== Editor
  "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.lineHeight": 16,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.wordWrapColumn": 120,
  "editor.minimap.autohide": "mouseover",
  "editor.inlayHints.enabled": "offUnlessPressed",
  // "editor.wordWrap": "on",
  //================================================================================== File
  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/Thumbs.db": false
  },
  "files.associations": {
    "commit-msg": "jsonc"
  },
  //================================================================================== Icon
  "vsicons.dontShowNewVersionMessage": true,
  //================================================================================== Window
  "window.newWindowProfile": "Default",
  "window.openFoldersInNewWindow": "on",
  //================================================================================== Explorer
  "explorer.sortOrder": "type",
  //================================================================================== Terminal
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  //================================================================================== Workbench
  "workbench.experimental.share.enabled": true,
  "workbench.panel.showLabels": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 16,
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.colorCustomizations": {},
  //================================================================================== Vim
  "vim.useSystemClipboard": false,
  "vim.handleKeys": {
    "<C-a>": false, // Select all
    "<C-b>": false, // Expand & Collapse left bar
    "<C-c>": false, // Copy
    "<C-v>": false, // Paste
    "<C-x>": false, // Cut
    "<C-z>": false, // Undo
    "<C-Z>": false, // Redo
    "<C-s>": false, // Save
    "<C-f>": false, // Find in current file
    "<C-w>": false, // Close current tab
    "<C-l>": false,
    "<C-i>": false,
    "<C-j>": false
  },
  //================================================================================== Git
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  //================================================================================== Gitlens
  "gitlens.plusFeatures.enabled": false,
  "gitlens.launchpad.indicator.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": true,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": true
  },
  //================================================================================== Git Diff View
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  //================================================================================== Github Copilot
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.mcp.serverSampling": {
    "Global in Code: notion": {
      "allowedModels": ["copilot/gpt-4.1"]
    }
  },
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/tmp/postman-collections-post-response.instructions.md": true,
    "/tmp/postman-collections-pre-request.instructions.md": true,
    "/tmp/postman-folder-post-response.instructions.md": true,
    "/tmp/postman-folder-pre-request.instructions.md": true,
    "/tmp/postman-http-request-post-response.instructions.md": true,
    "/tmp/postman-http-request-pre-request.instructions.md": true
  },
  //================================================================================== LaTeX
  "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/.build",
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.latex.autoBuild.interval": 5000,
  "latex-workshop.message.warning.show": false,
  "latex-workshop.message.error.show": false,
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-synctex=1",
        "-file-line-error",
        "-interaction=nonstopmode",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "xelatexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-file-line-error",
        "-interaction=nonstopmode",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    },
    {
      "name": "latexmk (latexmkrc)",
      "tools": ["latexmk_rconly"]
    },
    {
      "name": "latexmk (lualatex)",
      "tools": ["lualatexmk"]
    },
    {
      "name": "latexmk (xelatex)",
      "tools": ["xelatexmk"]
    }
  ],
  "latex-utilities.message.update.show": false,
  //================================================================================== C/C++
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  // C++ Intellisense
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.formatting": "disabled",
  // Clangd
  //  - clang-format as formatter
  //  - clang-tidy as linter
  //  - clang++ as compiler
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": [
    "--background-index",
    "--query-driver=/usr/bin/clang++",
    "--compile-commands-dir=."
  ],
  // Competitive Programming Helper
  "cph.general.autoShowJudge": false,
  "cph.general.defaultLanguage": "cpp",
  "cph.language.cpp.Command": "g++ -std=c++20 -fsanitize=address -fno-omit-frame-pointer -Wall -Wextra -Wno-sign-compare -Wno-parentheses",
  "cph.language.cpp.SubmissionCompiler": "GNU G++20 13.2 (64 bit, winlibs)",
  //================================================================================== C#
  //================================================================================== Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // isort
  "isort.args": ["--profile", "black"],
  //================================================================================== Java
  //================================================================================== JS & TS
  //================================================================================== Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  //================================================================================== Prettier
  "prettier.requireConfig": false,
  "prettier.useEditorConfig": true,
  "prettier.enableDebugLogs": false,
  "prettier.documentSelectors": ["jsonc"],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //================================================================================== Error Lens
  "errorLens.delay": 500,
  "errorLens.delayMode": "debounce",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.followCursor": "allLinesExceptActive",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  //================================================================================== Code Spell Checker
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en,vi",
  "cSpell.userWords": [
    "Codestral",
    "Keiron",
    "Leetcode",
    "memfn",
    "rerank",
    "shfmt"
  ],
  //==================================================================================
  //==================================================================================
  //==================================================================================
  //================================================================================== Misc
  "redhat.telemetry.enabled": false
}
